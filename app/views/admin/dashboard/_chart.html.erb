<script type="text/javascript" charset="utf-8">
$(function() {
  new Highcharts.Chart({
    chart: {
      renderTo: "registrations_chart"
    },
    title: {
      text: "Registrations by Day"
    },
    xAxis: {
      type: "datetime"
    },
    yAxis: {
      min: 0,
      title: {
        text: "Count"
      }
    },
    tooltip: {
      formatter: function() {
        return Highcharts.dateFormat("%B %e, %Y", this.x) + ': ' +
        Highcharts.numberFormat(this.y, 0);
      }
    },
    series: [
      <% {"Organic" => Registration.organic, "Social" => Social::Registration}.each do |name, registrations| %>
      {
        name: "<%= name %>",
        pointInterval: <%= 1.day * 1000 %>,
        pointStart: <%= 1.week.ago.to_i * 1000 %>,
        data: <%= registrations_chart_series(registrations, 1.week.ago) %>
      },
      <% end %>
    ]
  });
});
</script>
<div id="registrations_chart"></div>